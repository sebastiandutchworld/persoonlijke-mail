<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="res_config_settings_view_form_disable_followers"
		model="ir.ui.view">
		<field name="name">res.config.settings.view.form.inherit.disable_followers
		</field>
		<field name="model">res.config.settings</field>
		<field name="inherit_id" ref="base_setup.res_config_settings_view_form" />
		<field name="arch" type="xml">
			<xpath
				expr="//div[hasclass('app_settings_block')]/div[@name='integration']"
				position="after">
				<h2>Followers</h2>
				<div class="row mt16 o_settings_container" name="disable_followers">
				<div class="col-12 col-lg-6 o_setting_box">
					<div class="o_setting_left_pane">
						<field name="disable_followers" />
					</div>
					<div class="o_setting_right_pane">
						  <label string="Disable Followers" for="disable_followers"/>
					</div>
					</div>
				</div>
			</xpath>
		</field>
	</record>
</odoo>
				